<!DOCTYPE html>
<html>
<head>
  <title><% title %></title>
  <link rel="stylesheet" href="/style.css"> <!-- Ensure CSS is linked -->
</head>
<header>
  <img class="logo" src="/namuenetecogo.png" alt="">
</header>
<body>
  <div class="container">
    <h1>Contact List</h1>

    <!-- Contact list in table format -->
    <table class="contact-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone Number 1</th>
          <th>Phone Number 2</th>
          <th>Email</th>
          <th>Location</th>
          <th class="actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.forEach(function(contact) { %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.phone_number_1 %></td>
            <td><%= contact.phone_number_2 %></td>
            <td><%= contact.email %></td>
            <td><%= contact.location %></td>
            <td>
              <form method="POST" action="/delete/<%= contact.id %>" class="inline-form">
                <a href="/edit/<%= contact.id %>" class="edit-btn">üñå</a>
                <button type="submit" class="delete-btn" onclick="return confirmDelete()">üóëÔ∏è</button>
              </form>
            </td>
          </tr>
        <% }); %>

        <script>
          function confirmDelete() {
            return confirm('Are you sure you want to delete this contact? This action cannot be undone.');
          }
        </script>
        
      </tbody>
    </table>

    <a href="/new" class="add-contact-btn">Add New Contact</a> <!-- Button to add a new contact -->
  </div>
</body>
</html>
